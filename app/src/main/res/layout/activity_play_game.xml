<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".PlayGame">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/poker_background"
        android:id="@+id/gamelayout">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/table"
            android:layout_margin="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardlayout">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dark_back"
                android:visibility="gone"
                android:background="#90000000"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            android:id="@+id/leaderboard_btn"
            android:onClick="openleaderboard"
            android:src="@drawable/ic_format_list_bulleted_black_24dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toRightOf="@+id/leaderboard_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            android:rotation="20"
            android:id="@+id/sharebtn"
            android:onClick="sharecards"
            android:src="@drawable/share_cards"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toRightOf="@+id/sharebtn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            android:id="@+id/close_btn"
            android:onClick="closeclicked"
            android:src="@drawable/ic_close_black_24dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:id="@+id/sort_btn"
            android:onClick="sortCards"
            android:src="@drawable/ic_sort_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/mybids"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/sharelayout"
            android:background="#b0000000">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text="Sir"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/spadeimg"
                    android:onClick="setsir"
                    android:src="@drawable/spade"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/diamondimg"
                    android:onClick="setsir"
                    android:src="@drawable/diamond"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/clubimg"
                    android:onClick="setsir"
                    android:src="@drawable/club"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/heartimg"
                    android:onClick="setsir"
                    android:src="@drawable/heart"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/cutimg"
                    android:layout_marginLeft="5dp"
                    android:onClick="setsir"
                    android:src="@drawable/ic_close_black_24dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:id="@+id/share_error_txt"
                android:textColor="@android:color/white" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editback"
                android:id="@+id/cardcountedit"
                android:hint="No. of cards"
                android:inputType="number"
                android:imeOptions="flagNoExtractUi"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textAlignment="center"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:paddingRight="30dp"
                android:paddingBottom="15dp"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:id="@+id/share_ok"
                    android:textSize="18sp"
                    android:onClick="sharecards"
                    android:layout_gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingTop="15dp"
                    android:layout_margin="20dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/btn"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/share_cancel"
                    android:textSize="18sp"
                    android:onClick="sharecards"
                    android:layout_gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingTop="15dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/btn"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="30dp"
            android:visibility="gone"
            android:id="@+id/hands_layout"
            android:background="#50000000">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:visibility="gone"
                android:id="@+id/hands_error"
                android:text="Enter Hands"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editback"
                android:id="@+id/hands_edit"
                android:hint="Hands"
                android:inputType="number"
                android:imeOptions="flagNoExtractUi"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:paddingRight="30dp"
                android:paddingBottom="15dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:id="@+id/hands_ok"
                android:textSize="18sp"
                android:onClick="handsdone"
                android:layout_gravity="center"
                android:paddingLeft="30dp"
                android:paddingTop="15dp"
                android:paddingRight="30dp"
                android:paddingBottom="15dp"
                android:background="@drawable/btn"/>
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sir_img"
            android:layout_margin="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_txt"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_message_txt"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="Waiting for host to start round..."
            android:layout_marginBottom="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/extra_view"/>
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:id="@+id/extra_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_message_txt"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_table"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/navidtxt"
                android:textColor="@android:color/black"
                android:layout_margin="5dp"
                android:textSize="20sp"/>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/leaderboard_table"/>
                </HorizontalScrollView>
            </ScrollView>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>